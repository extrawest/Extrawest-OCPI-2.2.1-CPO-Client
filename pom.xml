		</repository>

		<!-- GitHub Releases -->
		<snapshotRepository>
			<id>github-releases</id>
			<url>https://maven.pkg.github.com/extrawest/Extrawest-OCPI-2.2.1-CPO-Client</url>
			<name>GitHub Package Registry</name>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

</project>
